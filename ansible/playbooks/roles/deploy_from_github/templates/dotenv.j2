# Environment variables for Fluffy Plushies app
# Generated by Ansible

# RabbitMQ Configuration
RABBITMQ_HOST={{ rabbitmq_host | default('rabbitmq') }}
RABBITMQ_PORT={{ rabbitmq_port | default('5672') }}
RABBITMQ_USERNAME={{ rabbitmq_username | default('fluffy_user') }}
RABBITMQ_PASSWORD={{ rabbitmq_password }}

# Email Service Configuration
EMAIL_SERVICE_RABBITMQ_QUEUE={{ email_service_queue | default('email_queue') }}
SMTP_HOST={{ smtp_host | default('smtp.example.com') }}
SMTP_PORT={{ smtp_port | default('587') }}
SMTP_USER={{ smtp_user | default('no-reply@fluffy-plushies.com') }}
SMTP_PASS={{ smtp_pass }}

# Identity MySQL Configuration
IDENTITY_MYSQL_ROOT_PASSWORD={{ identity_mysql_root_password }}
IDENTITY_MYSQL_USERNAME={{ identity_mysql_username | default('identity_user') }}
IDENTITY_MYSQL_PASSWORD={{ identity_mysql_password }}
IDENTITY_MYSQL_SCHEMA={{ identity_mysql_schema | default('fluffy-plushies-identity') }}
IDENTITY_MYSQL_URL={{ identity_mysql_url | default('identity-mysql:3307') }}
IDENTITY_MYSQL_TCP_PORT={{ identity_mysql_tcp_port | default('3307') }}
IDENTITY_ADMIN_PASSWORD={{ identity_admin_password }}

# JWT Configuration
JWT_SECRET={{ jwt_secret }}

# Inventory MySQL Configuration
INVENTORY_MYSQL_ROOT_PASSWORD={{ inventory_mysql_root_password }}
INVENTORY_MYSQL_TCP_PORT={{ inventory_mysql_tcp_port | default('3306') }}
INVENTORY_MYSQL_USERNAME={{ inventory_mysql_username | default('inventory_user') }}
INVENTORY_MYSQL_PASSWORD={{ inventory_mysql_password }}
INVENTORY_MYSQL_SCHEMA={{ inventory_mysql_schema | default('fluffy-plushies-inventory') }}
INVENTORY_MYSQL_URL={{ inventory_mysql_url | default('inventory-mysql:3306') }}

# Order Service Configuration
ASPNETCORE_URLS={{ aspnetcore_urls | default('http://+:8083') }}
MONGODB_CONNECTION_STRING={{ mongodb_connection_string | default('mongodb://root:order_service@order-mongodb:27017/') }}
MONGODB_DATABASE_NAME={{ mongodb_database_name | default('fluffy-plushies-orders') }}
